<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.gontory.elqirasygontory.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mutholaahFragment"
            app:destination="@id/mutholaahFragment" />
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_homeFragment_to_ikhtibarFragment"
            app:destination="@id/ikhtibarFragment" />
    </fragment>
    <fragment
        android:id="@+id/mutholaahFragment"
        android:name="com.gontory.elqirasygontory.ui.mutholaah.MutholaahFragment"
        android:label="fragment_mutholaah"
        tools:layout="@layout/fragment_mutholaah" >
        <action
            android:id="@+id/action_mutholaahFragment_to_materiActivity"
            app:destination="@id/materiActivity" />
    </fragment>
    <activity
        android:id="@+id/materiActivity"
        android:name="com.gontory.elqirasygontory.ui.materi.MateriActivity"
        android:label="activity_materi"
        tools:layout="@layout/activity_materi" >
        <argument
            android:name="mutholaah"
            app:argType="com.gontory.elqirasygontory.data.Mutholaah" />
    </activity>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.gontory.elqirasygontory.ui.about.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        tools:layout="@layout/fragment_ikhtibar"
        android:id="@+id/ikhtibarFragment"
        android:name="com.gontory.elqirasygontory.ui.quiz.IkhtibarFragment"
        android:label="IkhtibarFragment" >
        <action
            android:id="@+id/action_ikhtibarFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
        <argument
            android:name="quizData"
            app:argType="com.gontory.elqirasygontory.data.Question" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.gontory.elqirasygontory.ui.quiz.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >
        <argument
            android:name="QuizData"
            app:argType="com.gontory.elqirasygontory.data.Mutholaah" />
        <action
            android:id="@+id/action_quizFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.gontory.elqirasygontory.ui.result.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <argument
            android:name="QuizData"
            app:argType="com.gontory.elqirasygontory.data.Mutholaah" />
        <action
            android:id="@+id/action_resultFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
        <action
            android:id="@+id/action_resultFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>