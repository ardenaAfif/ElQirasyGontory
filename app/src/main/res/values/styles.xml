<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.ElQirasyGontory.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/RoundedShapeAppearance</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="RoundedShapeAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>
    
    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">

        <!--  Non selected color -->
        <item name="colorControlNormal">@color/grey</item>

        <!--   Selected color -->
        <item name="colorControlActivated">@color/red_500</item>
    </style>
</resources>